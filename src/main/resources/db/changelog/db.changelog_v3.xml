<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet id="V3.0.0" author="dxl">

        <comment>增加演唱会节目表,删除演唱会表的视频id字段</comment>
        <createTable tableName="frs_concert_program" remarks="演唱会节目表">
            <column name="fcp_id" type="bigint" autoIncrement="true" remarks="主键">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="fcp_sort" type="int(11)" remarks="排序值"/>
            <column name="fcp_fc_id" type="bigint" remarks="演唱会id"/>
            <column name="fcp_name" type="varchar(128)" remarks="表演曲目"/>
            <column name="fcp_vid" type="varchar(128)" remarks="视频id"/>
            <column name="fcp_img" type="varchar(128)" remarks="视频封图"/>
            <column name="fcp_collection_num" type="int(11)" remarks="收藏数"/>
            <column name="fcp_create_time" type="bigint(20)" remarks="创建时间"/>
            <column name="fcp_update_time" type="bigint(20)" remarks="修改时间"/>
            <column name="fcp_is_valid" type="int(11)" remarks="状态 0:删除 1:显示"/>
        </createTable>
        <dropColumn tableName="frs_concert" columnName="fc_vid"></dropColumn>
    </changeSet>
</databaseChangeLog>