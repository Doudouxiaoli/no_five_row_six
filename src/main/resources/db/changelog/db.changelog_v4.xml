<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet id="V4.0.0" author="dxl">

        <comment>增加综艺表标题,图片,电影图片地址,综艺,电影,以及各个板块的观看量</comment>
        <addColumn tableName="frs_movie">
            <column name="fm_hits_num" type="int(11)" remarks="观看量"/>
            <column name="fm_img" type="varchar(128)" remarks="封面"/>
        </addColumn>
        <addColumn tableName="frs_variety">
            <column name="fv_title" type="varchar(128)" remarks="标题"/>
            <column name="fv_hits_num" type="int(11)" remarks="观看量"/>
            <column name="fv_img" type="varchar(128)" remarks="封面"/>
        </addColumn>
        <addColumn tableName="frs_tv">
            <column name="ft_hits_num" type="int(11)" remarks="观看量"/>
        </addColumn>
        <addColumn tableName="frs_song">
            <column name="fs_hits_num" type="int(11)" remarks="点击数"/>
            <column name="fs_like_num" type="int(11)" remarks="点赞数"/>
        </addColumn>
        <addColumn tableName="frs_dance">
            <column name="fd_hits_num" type="int(11)" remarks="观看数"/>
        </addColumn>
        <addColumn tableName="frs_concert_program">
            <column name="fcp_hits_num" type="int(11)" remarks="观看数"/>
        </addColumn>
    </changeSet>
</databaseChangeLog>