<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet id="V5.0.0" author="dxl">

        <comment>增加记录表,收藏表，点赞表</comment>
        <createTable tableName="frs_view_record" remarks="浏览记录表">
            <column name="fvr_id" type="bigint" autoIncrement="true" remarks="主键">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="fvr_user_id" type="bigint" remarks="用户主键"/>
            <column name="fvr_content_id" type="int(11)" remarks="内容id"/>
            <column name="fvr_content_name" type="varchar(128)" remarks="内容名称"/>
            <column name="fvr_type_id" type="int(11)" remarks="模块id"/>
            <column name="fvr_type_name" type="varchar(128)" remarks="内容来源(模板名称)"/>
            <column name="fvr_ip" type="varchar(128)" remarks="ip地址"/>
            <column name="fvr_like" type="int" remarks="是否点赞(0：未点赞；1: 点赞；2：取消点赞)"/>
            <column name="fvr_like_time" type="bigint" remarks="点赞时间/取消点赞时间"/>
            <column name="fvr_favorite" type="int" remarks="是否收藏(0：未收藏；1: 收藏；2：取消收藏)"/>
            <column name="fvr_favorite_time" type="bigint" remarks="收藏时间/取消收藏时间"/>
        </createTable>

        <createTable tableName="frs_bookmark_record" remarks="收藏表">
            <column name="fbr_id" type="bigint" autoIncrement="true" remarks="主键">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="fbr_user_id" type="bigint" remarks="用户主键"/>
            <column name="fbr_content_id" type="int(11)" remarks="内容id"/>
            <column name="fbr_content_name" type="varchar(128)" remarks="内容名称"/>
            <column name="fbr_type_id" type="int(11)" remarks="模块id"/>
            <column name="fbr_type_name" type="varchar(128)" remarks="内容来源(模板名称)"/>
            <column name="fbr_time" type="bigint" remarks="点赞时间"/>
            <column name="fbr_state" type="int" remarks="是否点赞(0：未点赞；1: 点赞；2：取消点赞)"/>
        </createTable>

        <createTable tableName="frs_like_record" remarks="点赞表">
            <column name="flr_id" type="bigint" autoIncrement="true" remarks="主键">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="flr_user_id" type="bigint" remarks="用户主键"/>
            <column name="flr_content_id" type="int(11)" remarks="内容id"/>
            <column name="flr_content_name" type="varchar(128)" remarks="内容名称"/>
            <column name="flr_type_id" type="int(11)" remarks="模块id"/>
            <column name="flr_type_name" type="varchar(128)" remarks="内容来源(模板名称)"/>
            <column name="flr_time" type="bigint" remarks="点赞时间"/>
            <column name="flr_state" type="int" remarks="是否点赞(0：未点赞；1: 点赞；2：取消点赞)"/>
        </createTable>
    </changeSet>
</databaseChangeLog>